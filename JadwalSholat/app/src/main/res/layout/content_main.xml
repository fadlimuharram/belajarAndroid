<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fadli.jadwalsholat.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/ltMainGambarLokasi"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/jadwal_satu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ltMainGambarLokasi">
        <TextView
            android:text="Dzuhur"
            android:layout_weight="1"
            android:textSize="@dimen/title_sholat"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Ashar"
            android:layout_weight="1"
            android:textSize="@dimen/title_sholat"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jadwal_dua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/jadwal_satu">
        <TextView
            android:id="@+id/ltDzuhur"
            android:text="12:00"
            android:layout_weight="1"
            android:textSize="@dimen/item_sholat"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ltAshar"
            android:text="15:00"
            android:layout_weight="1"
            android:textSize="@dimen/item_sholat"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jadwal_tiga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@id/jadwal_dua">
        <TextView
            android:text="Magrib"
            android:layout_weight="1"
            android:textSize="@dimen/title_sholat"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Isya"
            android:layout_weight="1"
            android:textSize="@dimen/title_sholat"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jadwal_empat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/jadwal_tiga">
        <TextView
            android:id="@+id/ltMagrib"
            android:text="12:00"
            android:layout_weight="1"
            android:textSize="@dimen/item_sholat"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ltIsya"
            android:text="15:00"
            android:layout_weight="1"
            android:textSize="@dimen/item_sholat"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jadwal_lima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@id/jadwal_empat">
        <TextView
            android:text="Shubuh"
            android:layout_weight="1"
            android:textSize="@dimen/title_sholat"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jadwal_enam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/jadwal_lima">
        <TextView
            android:id="@+id/ltShubuh"
            android:text="12:00"
            android:layout_weight="1"
            android:textSize="@dimen/item_sholat"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@id/jadwal_enam">
        <EditText
            android:id="@+id/etLokasi"
            android:layout_weight="1"
            android:hint="Masukan Lokasi Yang Di Inginkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnLokasi"
            android:text="Ubah Lokasi"
            android:onClick="ubahLokasi"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
