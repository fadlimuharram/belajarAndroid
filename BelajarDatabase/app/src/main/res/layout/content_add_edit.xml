<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fadli.belajardatabase.AddEditActivity"
    tools:showIn="@layout/activity_add_edit"
    android:orientation="vertical">

    <EditText
        android:id="@+id/ltEnterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Teks...."
        android:textSize="12sp"
        android:inputType="text"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:padding="12dp"
        />

    <EditText
        android:id="@+id/ltEnterPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Prioritas"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:maxLines="1"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="8dp"
        android:padding="12dp"
        />

</LinearLayout>
